          <ResourceKey>numDiscountRate</ResourceKey>
          <Action typeName="Sage.Platform.QuickForms.ActionItems.CSharpSnippetActionItem, Sage.Platform.QuickForms">
            <CSharpSnippetActionItem>
              <MethodName>numDiscountRate_ChangeAction</MethodName>
              <CSharpCodeSnippet>Sage.Entity.Interfaces.ISalesOrder salesOrder = BindingSource.Current as Sage.Entity.Interfaces.ISalesOrder;
if (salesOrder != null)
{
    double orderTotal = salesOrder.OrderTotal ?? 0;
    double discountAmount = orderTotal * Convert.ToDouble(String.IsNullOrEmpty(numDiscountRate.Text) ? "0" : numDiscountRate.Text);
    salesOrder.DiscountTotal = discountAmount;
    double adjustedTotal = orderTotal - discountAmount;
    salesOrder.TaxTotal = (salesOrder.Tax ?? 0) * adjustedTotal;
}</CSharpCodeSnippet>
            </CSharpSnippetActionItem>
